{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "content_scripts": [
        {
            "css": ["google/styling.css"],
            "matches": [ "*://*.google.com/*", "*://*.google.dk/*" ],
        },
        {
            "js": [ "reddit/content.js" ],
            "css": ["reddit/styling.css"],
            "matches": [ "*://*.reddit.com/*" ],
        },
        {
            "js": [ "github/content.js" ],
            "matches": [ "*://*.github.com/*" ],
        },
        {
            "css": [ "twitter/styling.css" ],
            "matches": [ "*://*.twitter.com/*" ],
        },
        {
            "css": [ "proton/styling.css" ],
            "matches": [ "*://*.proton.me/*" ],
        }
    ],

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/rocket-icon-16.png",
            "19": "images/rocket-icon-19.png",
            "32": "images/rocket-icon-32.png",
            "38": "images/rocket-icon-38.png",
            "48": "images/rocket-icon-48.png",
            "72": "images/rocket-icon-72.png"
        }
    },

    "permissions": [ ]
}
